<%= f.hidden_field :user_type_id %>
<div class="control-group input-group">

  <%= f.label :user_type, "Who are You?", :class => "control-label" %>
  <div class="controls radio-controls">

    <% ["employer", "job seeker"].each do |item| %>
      <%= f.radio_button :user_type, item, :class => "user-type" %>
      <%= f.label :user_type, item.capitalize, :class => "radio-label" %>
    <% end %>

  </div>

</div>
<div class="control-group input-group <%= "input-group-error" unless  @msg[:first_name].nil? %>">

  <%= f.label :first_name, :class => "control-label" %>
  <div class="controls">

    <%= f.text_field :first_name, :class => "text", :maxlength => "40" %>
    <%  if not @msg[:first_name].nil? %>

       <span id="first-name-error" class="inline-input-error-message">
         <%= @msg[:first_name].join  %>
       </span>

    <% end %>
    <span id="first-name-disclaimer " class="inline-notice">
      Your name will be publicly displayed on Job Board. These fields are mandatory.
    </span>

  </div>

</div>
<div class="control-group input-group <%= "input-group-error" unless  @msg[:last_name].nil? %>">

  <%= f.label :last_name, :class => "control-label" %>
  <div class="controls">

    <%= f.text_field :last_name, :class => "text", :maxlength => "40" %>

  </div>

  <%  if not @msg[:last_name].nil? %>

    <span id="last-name-error" class="inline-input-error-message">
      <%= @msg[:last_name].join %>
    </span>

  <% end  %>

</div>
<div class="control-group input-group <%= "input-group-error" unless  @msg[:email].nil? %>">

  <%= f.label :email, :class => "control-label" %>
  <div class="controls">

    <%= f.email_field :email, :class => "text", :maxlength => "40" %>
    <%  if not @msg[:email].nil? %>

              <span id="email-error" class="inline-input-error-message">

                <%= @msg[:email].join %>

              </span>

    <% end %>
    <span id="email-disclaimer" class="inline-disclaimer-message">

              <span id="pending-email-disclaimer">A confirmation mail will be sent to your email address.</span>
              <span id="valid-email-disclaimer">Your confirmation will be sent to %email%.</span>

            </span>

  </div>

</div>
<div class="control-group input-group <%= "input-group-error" unless  @msg[:password].nil? %>">

  <%= f.label :password, :class => "control-label" %>
  <div class="controls">

    <%= f.password_field :password, :class => "text", :maxlength => "40" %>

  </div>
  <% if not @msg[:password].nil? %>

    <span id="password-error" class="inline-input-error-message">

      <% @msg[:password].each do |msg| %>

        <%= msg %>

        <br />

      <% end %>

    </span>

  <% end %>

</div>
<div class="control-group input-group">

  <%= f.label :password_confirmation, :class => "control-label" %>
  <div class="controls">

    <%= f.password_field :password_confirmation, :class => "text", :maxlength => "40" %>

  </div>

</div>