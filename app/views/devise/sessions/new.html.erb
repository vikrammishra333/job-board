<div class="login-content-wrapper">

  <div class="login-content">

    <div class="login">

      <h2>LogIn To Job Board </h2>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

        <div class="control-group input-group">

          <%= f.label :email, :class => "control-label" %>
          <div class="controls">

            <%= f.email_field :email, :autofocus => true, :class => "text" %>

          </div>

        </div>
        <div class="control-group input-group">

          <%= f.label :password, :class => "control-label" %>
          <div class="controls">

            <%= f.password_field :password, :class => "text"  %>

          </div>

        </div>

        <% if devise_mapping.rememberable? -%>
      
          <div class="control-group ">

            <div class="controls">
              
              <label class="checkbox">
                
                <input type="hidden" value="0" name="user[remember_me]">
                <input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me" /> Remember me
                
              </label>
              <%#= f.check_box :remember_me %>
              <%#= f.label :remember_me, :class => "checkbox" %>
            
            </div>

          </div>
          
        <% end -%>

        <div class="actions push-right-actions">

          <%= f.submit "Sign in" %>
          <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>

            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
            
          <% end -%>

        </div>

      <% end %>

      <%#= render "devise/shared/links" %>

    </div>

  </div>

</div>